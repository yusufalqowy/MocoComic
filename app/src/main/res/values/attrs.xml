<resources>
    <declare-styleable name="ErrorView">
        <attr name="icon" format="reference" />
        <attr name="iconTint" format="color" />
        <attr name="iconSize" format="dimension" />
        <attr name="title" format="string" />
        <attr name="toolbarTitle" format="string" />
        <attr name="description" format="string" />
        <attr name="showRetryButton" format="boolean" />
        <attr name="showToolbar" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ShimmerContainer">
        <attr name="shapeAppearance" format="reference" />
        <attr name="shapeAppearanceOverlay" format="reference" />
        <attr name="shimmerWidth" format="dimension" />
        <attr name="shimmerHeight" format="dimension" />
        <attr name="shimmerWidthPercent" format="float" />
        <attr name="shimmerHeightPercent" format="float" />
    </declare-styleable>
    <declare-styleable name="ListItemView">
        <attr name="label" format="string" />
        <attr name="enableDefaultPadding" format="boolean" />
        <attr name="leadingIcon" format="reference" />
        <attr name="trailingIcon" format="reference" />
    </declare-styleable>
</resources>
